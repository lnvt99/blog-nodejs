<div class="mt-2">
    <div class="row">

        {{#each blogs}}
        <div class="col-sm-6 col-lg-4 mt-4">
            <div class="card ">
                <a href="/blogs/{{this.slug}}">
                    <img src="..." class="card-img-top" alt="...">
                </a>
                <div class="card-body">
                    <a href="/blogs/{{this.slug}}">
                    <h5 class="card-title">{{this.name}}</h5>
                    </a>
                    <p class="card-text">{{this.description}}</p>
                    <a href="#" class="btn btn-primary">Detail</a>
                </div>
            </div>
        </div>
        {{/each}}

    </div>
</div>